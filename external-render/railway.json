{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "cd external-render && npm install && npm run build",
    "watchPatterns": [
      "external-render/**"
    ]
  },
  "deploy": {
    "startCommand": "cd external-render && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

