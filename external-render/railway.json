{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd external-render && npm install",
    "watchPatterns": [
      "**"
    ]
  },
  "deploy": {
    "startCommand": "cd external-render && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

